<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper2"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistema"
        android:textColor="#171616" />

    <CheckBox
        android:id="@+id/checkmetrico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metrico" />

    <CheckBox
        android:id="@+id/checkimperial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imperial" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo" />

    <Switch
        android:id="@+id/switchsexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hombre / Mujer" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese sus datos." />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" " />

    <EditText
        android:id="@+id/txt_estatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar estatura."
        android:inputType="number|numberDecimal"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masa" />

    <EditText
        android:id="@+id/txt_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar peso."
        android:inputType="number|numberDecimal"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" " />

    <Button
        android:id="@+id/btn_ser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sistema"
        android:text="CALCULAR" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu IMC es:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_imc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" " />

    <ImageView
        android:id="@+id/ImagenIMC"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        app:srcCompat="@drawable/imc_hombre" />

</LinearLayout>